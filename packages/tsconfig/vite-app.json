
{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Vite App Config",
  "extends": "./base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "esnext",
    "useDefineForClassFields": true
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"]
}
